header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      - const name = user.name.split(' ')[0]
      a.nav__el(href='/account')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${name} photo`)
        span= name
      a.nav__el.nav__el--logout Logout
    else
      a.nav__el(href='/login') Log in
      button.nav__el.nav__el--cta Sign up